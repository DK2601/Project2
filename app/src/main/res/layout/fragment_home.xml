<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:fillViewport="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/black">

        <!-- Top bar -->
        <LinearLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:cardCornerRadius="150dp"
                android:layout_marginRight="15dp">
                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/filter_all"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@drawable/border_button_2"
                android:backgroundTint="#202020"
                android:gravity="center"
                android:text="Tất cả"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/filter_music"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:backgroundTint="#202020"
                android:text="Nhạc"
                android:background="@drawable/border_button_2"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/filter_podcasts"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:backgroundTint="#202020"
                android:background="@drawable/border_button_2"
                android:text="Podcasts"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <!-- Main content -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_bar"
            android:padding="16dp"/>

        <TextView
            android:id="@+id/recently_song"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Mới phát gần đây"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingStart="16dp"
            android:layout_below="@id/recyclerView" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recently_song"
            android:padding="16dp"
            android:orientation="horizontal"/>

        <TextView
            android:id="@+id/recently_artist"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Nghệ sĩ yêu thích của bạn"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingStart="16dp"
            android:layout_below="@id/recyclerViewHorizontal" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewArtist"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:paddingStart="16dp"
            android:layout_below="@id/recently_artist"
            android:orientation="horizontal"/>

        <!-- Mini playback view -->
        <RelativeLayout
            android:layout_below="@+id/recyclerViewArtist"
            android:id="@+id/mini_playback"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#393939"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/playback_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/sample_album_art" />

            <TextView
                android:id="@+id/playback_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/playback_image"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:text="Title"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:ellipsize="end"
                android:maxLines="1" />

            <ImageView
                android:id="@+id/play_pause_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_play" />
        </RelativeLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>
